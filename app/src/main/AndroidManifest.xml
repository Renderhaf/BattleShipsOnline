<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="battleships.game.dvira.battleshipsonline">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/battleshipicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/battleshipicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Menu" />
        <activity android:name=".MakeBoard" />
        <activity android:name=".CompGame" />
        <activity android:name=".NewHS" />
        <activity android:name=".Settings" />
        <activity android:name=".Leaderboards" />
        <activity android:name=".Instructions"></activity>
        <service android:name=".MusicService"></service>
        <receiver android:name = ".BatteryBroadcastReciever" android:enabled = "true" android:exported = "true">
        </receiver>
    </application>

</manifest>